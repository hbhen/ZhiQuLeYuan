<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_width="140dp"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="0710"
            android:textSize="24sp" />


        <ImageView
            android:id="@+id/iv_item_history_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:src="@drawable/my_call_ico_60_3x" />
    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X-III2型"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_item_history_title"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通话时长"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_itemt_history_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36:00"
                android:layout_marginLeft="5dp"
                android:textColor="#ff4511"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_item_history_play"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/myplay_ico_26_3x" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:layout_marginTop="75dp"
        android:layout_weight="1" />
</LinearLayout>