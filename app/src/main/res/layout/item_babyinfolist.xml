<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/iv_item_babyinfolist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop"
        />
<!--android:src="@drawable/player_cover_default"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_toRightOf="@id/iv_item_babyinfolist"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_title_item_babyinfolist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正正"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"/>

        <!--android:layout_below="@id/tv_title_item_babyinfolist"-->
        <LinearLayout
            android:id="@+id/ll_down_item_babyinfolist"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_babyinfolist_setvolume"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/babyvolume_3x"/>

                <TextView
                    android:id="@+id/tv_item_babyinfolist_primarysound"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="初始音量"
                    android:textColor="@color/grayFont"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_babyinfolist_invite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:src="@drawable/babyinvite_3x"/>

                <TextView
                    android:id="@+id/tv_item_babyinfolist_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="邀请"
                    android:textColor="@color/grayFont"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

        </LinearLayout>

        <!--android:layout_below="@id/ll_down_item_babyinfolist"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_babyinfolist_sign_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/signs_man"/>

            <TextView
                android:id="@+id/tv_item_babyinfolist_sexy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="男"
                android:textColor="@color/grayFont"
                android:textSize="12sp"/>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:src="@drawable/babybirthday_3x"/>

            <TextView
                android:id="@+id/tv_item_babyinfolist_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="2012/02/01"
                android:textColor="@color/grayFont"
                android:textSize="@dimen/sp_12"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignLeft="@id/tv_title_item_babyinfolist"
            android:layout_alignParentBottom="true"
            android:background="@color/color_8f8f8f"/>
    </RelativeLayout>

</RelativeLayout>