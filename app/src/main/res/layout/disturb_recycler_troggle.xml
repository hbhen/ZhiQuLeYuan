<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_nodisturb_first"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_below="@id/tb_nodisturb"
                android:background="#ffffff"
                android:descendantFocusability="afterDescendants"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

    <TextView
        android:id="@+id/tv_nodisturb_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="起始时间"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_nodisturb_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_nodisturb_start"
        android:text="-结束时间"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_activity_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nodisturb_start"
        android:layout_marginTop="5dp"
        android:text=""
        android:textColor="#8f8f8f"
        android:textSize="16sp"/>

    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:clickable="true"/>

</RelativeLayout>