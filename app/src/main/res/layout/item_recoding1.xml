    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:focusable="false"
            android:id="@+id/tv_item_recording_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:text="2016年9月20日 09:30:00"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp">

            <TextView
                android:id="@+id/tv_recoding_desc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textColor="#8f8f8f"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_recoding_desc_detailstime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_recoding_desc_time"
                android:text="09/12/22:02"
                android:textColor="#ff4511"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_recoding_desc_longtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_toRightOf="@id/tv_recoding_desc_time"
                android:text="时长"
                android:textColor="#8f8f8f"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_recoding_desc_detailslongtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_recoding_desc_longtime"
                android:text="02:04"
                android:textColor="#ff4511"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_recoding_desc_playtimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@id/tv_recoding_desc_longtime"
                android:text="播放次数"
                android:textColor="#8f8f8f"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_recoding_desc_detailsplaytime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_recoding_desc_playtimes"
                android:text="2"
                android:textColor="#ff4511"
                android:textSize="12sp"/>

        </RelativeLayout>
    </LinearLayout>


