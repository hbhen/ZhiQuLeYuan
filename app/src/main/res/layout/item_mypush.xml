<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp">


        <Button
            android:id="@+id/swipe_pust_delete_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="删除"
            android:background="#ff4511"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_mypush_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0810月"
                    android:textColor="#000000"
                    android:textSize="24sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_item_mypush"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@mipmap/test"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp">

                <TextView
                    android:id="@+id/tv_item_mypush_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="春天在哪里"
                    android:textColor="#000000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_item_mypush_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_item_mypush_title"
                    android:layout_below="@id/tv_item_mypush_title"
                    android:layout_marginTop="8dp"
                    android:text="推送到"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_item_mypush_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_item_mypush_title"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tv_item_mypush_to"
                    android:text="皮皮 11:02"
                    android:textColor="#ff4511"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_item_mypush_play"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/play_pressed_240"/>
            </RelativeLayout>
        </LinearLayout>


    </com.daimajia.swipe.SwipeLayout>

</LinearLayout>
