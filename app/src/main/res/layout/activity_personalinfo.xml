<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_persionalfinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="个人信息"
                android:textColor="#000000"
                android:textSize="60px" />
            <!--这里的加号图片还没有给图,先用这个代替-->
            <TextView
                android:id="@+id/tv_save"
                android:text="保存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:textColor="#ff4511"
                android:textSize="48px" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="468px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tb_persionalfinfo"
        android:background="#ffffff"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="60px">

        <ImageView
            android:layout_width="160px"
            android:layout_height="160px"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_personalinfo"
                android:layout_width="830px"
                android:layout_height="120px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:background="#FFE5E5"
                android:hint="请输入您的昵称"
                android:paddingLeft="30px"
                android:textSize="48px" />

            <LinearLayout
                android:id="@+id/ll_personalinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_personalinfo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_addbabyinfo_mancheck"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:src="@drawable/round" />

                <TextView
                    android:id="@+id/tv_addbabyinfo_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="男"
                    android:textSize="36px" />

                <ImageView
                    android:id="@+id/iv_addbabyinfo_womancheck"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_marginLeft="160px"
                    android:src="@drawable/round" />

                <TextView
                    android:id="@+id/tv_addbabyinfo_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15px"
                    android:text="女"
                    android:textSize="36px" />
            </LinearLayout>

            <TextView

                android:layout_marginTop="30px"
                android:id="@+id/tv_personalinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_personalinfo"
                android:layout_marginLeft="30px"
                android:text="请选择您的出生年月日"
                android:textColor="#909090"
                android:textSize="48px" />

            <LinearLayout
                android:layout_marginTop="30px"
                android:layout_marginLeft="30px"
                android:layout_below="@id/tv_personalinfo"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="2016年"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="08月"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="09日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>