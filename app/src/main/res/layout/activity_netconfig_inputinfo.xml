<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_netconfig_inputinfo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:gravity="center">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="配置网络连接"
            android:textColor="#000000"
            android:textSize="60px" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tb_netconfig_inputinfo_name"
        android:layout_marginTop="180px"
        android:id="@+id/rl_netconfig_inputinfo_name"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_netconfig_inputinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="名称"
            android:textColor="#000000"
            android:textSize="54px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120px"
            android:layout_toRightOf="@id/tv_netconfig_inputinfo_name"
            android:hint="网络名称"
            android:textColor="#d1d1d1"
            android:textSize="54px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rl_netconfig_inputinfo_name"
        android:layout_marginTop="120px"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_netconfig_inputinfo_psd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30px"
            android:text="密码"
            android:textColor="#000000"
            android:textSize="54px" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="160px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120px"
            android:layout_toRightOf="@id/tv_netconfig_inputinfo_psd"
            android:hint="请输入密码"
            android:textColor="#d1d1d1"
            android:textSize="54px" />
    </RelativeLayout>
</RelativeLayout>