<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView
        android:id="@+id/iv_album_details_two"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@drawable/player_cover_default"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_album_details_two_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/iv_album_details_two"
        android:text="小精豆童谣说唱"
        android:textColor="#000000"
        android:textSize="@dimen/sp_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_album_details_two_title"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toRightOf="@id/iv_album_details_two"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_album_details_two_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/round"
            android:drawablePadding="@dimen/dp_5"
            android:text="0-6岁"
            android:textColor="#8f8f8f"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/tv_itemt_album_details_two_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/collect_list_ico"
            android:drawablePadding="@dimen/dp_5"
            android:text="581"
            android:textColor="#8f8f8f"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dis_sub_item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/audition_list_gray_ico"
            android:drawablePadding="@dimen/dp_5"
            android:text="试听"
            android:textColor="@color/grayFont"
            android:textSize="@dimen/sp_12"/>

        <TextView
            android:id="@+id/dis_sub_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/secondary_favorite_gray_3x"
            android:drawablePadding="@dimen/dp_5"
            android:text="收藏"
            android:textColor="@color/grayFont"
            android:textSize="@dimen/sp_12"/>

    </LinearLayout>
</RelativeLayout>