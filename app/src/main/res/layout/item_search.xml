<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="81dp"
              android:orientation="horizontal"
              android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_item_search"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:scaleType="centerCrop"
        android:src="@drawable/player_cover_default"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="春天在哪里"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_14">

            <TextView
                android:id="@+id/tv_item_search_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="播放次数"
                android:textColor="@color/grayFont"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_item_search_detailstimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_toRightOf="@id/tv_item_search_times"
                android:textColor="@color/redFont"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/tv_item_search_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@id/tv_item_search_detailstimes"
                android:text="所属品类"
                android:textColor="@color/grayFont"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_item_search_detailscategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toRightOf="@id/tv_item_search_category"
                android:text="童谣"
                android:textColor="@color/redFont"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>