<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tb_netconfig_prepare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/titlebackground">

        <LinearLayout
            android:id="@+id/iv_back3"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="配置网络连接"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_netconfig_prepare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_netconfig_prepare"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:src="@drawable/tishitu024"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_netconfig_prepare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:text="等待玩具提示:&quot;声波接受成功&quot;.点击下一步"
        android:textColor="#000000"
        android:textSize="@dimen/sp_18"/>

    <Button
        android:id="@+id/bt_sendsuccess"
        android:layout_width="220dp"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/iv_netconfig_prepare"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/shape_discovery_sendvoice"
        android:text="听到提示音声波接收成功"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_18"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_sendsuccess"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="未听到成功提示,"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>

        <TextView
            android:id="@+id/tv_netconfig_retry3_sendvoiceagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"
            android:text="重新发送"
            android:textColor="@color/redFont"
            android:textSize="@dimen/sp_18"/>
    </LinearLayout>

    <!--这个地方应该用shape,oval-->

</RelativeLayout>