<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_unbindbaby"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/titlebackground"
        >

        <LinearLayout
            android:id="@+id/iv_unbindbaby_backa"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_10">

            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="玩具解除绑定"
            android:textColor="#000000"
            android:textSize="@dimen/dp_18"/>

        <!--<ImageView-->
        <!--android:id="@+id/iv_bindbaby_addbabyinfo"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="10dp"-->
        <!--android:src="@drawable/babyadd_3x"/>-->
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_unbindbaby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice">

        </ListView>

        <Button
            android:id="@+id/bt_unbindbaby"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="60dp"
            android:background="@drawable/shape_edit_rect"
            android:text="确定"
            android:textColor="#000000"
            android:visibility="visible"/>
    </FrameLayout>

</LinearLayout>