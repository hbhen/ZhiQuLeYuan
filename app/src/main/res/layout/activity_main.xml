<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fl_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rb_discovery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:layout_width="25.9dp"
                android:layout_height="25.9dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rb_discovery_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="发现"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_recoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:layout_width="25.9dp"
                android:layout_height="25.9dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rb_recoding_selector"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="录音"/>

        </LinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rb_toy"
                android:layout_width="25.9dp"
                android:layout_height="25.9dp"
                android:layout_gravity="center_horizontal"
                />


        </com.zhy.android.percent.support.PercentLinearLayout>

        <LinearLayout
            android:id="@+id/rb_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25.9dp"
                android:layout_height="25.9dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rb_history_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="历史"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rb_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25.9dp"
                android:layout_height="25.9dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rb_mine_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="我的"/>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_fragmentcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"/>

    <FrameLayout
        android:id="@+id/fl_activity_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:src="@drawable/home_toy_ico_highlight_3x"/>
    </FrameLayout>


</RelativeLayout>
