<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_discoverylistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:src="@drawable/home_recommended_triangle" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:text="推荐内容"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_desc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_desc_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TED-Ed原创课程"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_desc_title"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_desc_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放次数"
                    android:textColor="#8f8f8f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_desc_detailstimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_desc_times"
                    android:text="336"
                    android:textColor="#ff4511"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_desc_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_toRightOf="@id/tv_desc_times"
                    android:text="所属品类"
                    android:textColor="#8f8f8f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_desc_detailscategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tv_desc_category"
                    android:text="生活百科"
                    android:textColor="#ff4511"
                    android:textSize="12dp" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="3dp" />
            </RelativeLayout>

            <ImageView

                android:id="@+id/iv_desc_rightarrow"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>