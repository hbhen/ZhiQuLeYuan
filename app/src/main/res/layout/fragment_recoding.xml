<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_recoding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="录音"
            android:textColor="#000000"
            android:textSize="20dp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tb_recoding">

        <ListView
            android:id="@+id/lv_recoding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_fragment_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <!--录音的界面-->
        <RelativeLayout
            android:id="@+id/rl_fragment_recording_recording"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#f3f3f3">

            <LinearLayout
                android:id="@+id/ll_recoding_tool_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/iv_fragent_recording_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_list_gray_ico"/>

                <ImageView
                    android:id="@+id/iv_fragent_recording_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/edit_list_gray"/>

                <ImageView
                    android:id="@+id/iv_fragent_recording_toy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/toy_list_gray"/>

                <ImageView
                    android:id="@+id/iv_fragent_recording_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_list_down"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@id/ll_recoding_tool_title"
                android:background="#000000"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_recoding_tool_title"
                android:layout_centerInParent="true"
                android:layout_marginTop="80px">

                <ImageView
                    android:id="@+id/iv_recoding_tool_startrecoding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/recording_pressed_240"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_recoding_tool_startrecoding"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="点击开始录音"
                    android:textColor="#909090"
                    android:textSize="16dp"/>
            </RelativeLayout>
        </RelativeLayout>
        <!--录音完成的界面-->
        <RelativeLayout
            android:id="@+id/rl_fragment_recording_complete"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:background="#f3f3f3">


            <LinearLayout
                android:divider="#ff4511"
                android:id="@+id/ll_recoding_tool_titleDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_fragent_recording_shareDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/share_list_gray_ico"/>
                <View
                    android:background="#888888"
                    android:layout_width="1dp"
                    android:layout_height="35dp"/>

                <ImageView
                    android:id="@+id/iv_fragent_recording_editorDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/edit_list_gray"/>
                <View
                    android:background="#888888"
                    android:layout_width="1dp"
                    android:layout_height="35dp"/>
                <ImageView
                    android:id="@+id/iv_fragent_recording_toyDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/toy_list_gray"/>
                <View
                    android:background="#888888"
                    android:layout_width="1dp"
                    android:layout_height="35dp"/>
                <ImageView
                    android:id="@+id/iv_fragent_recording_downDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_list_down"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ll_fragment_recoding_desitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_recoding_tool_titleDone"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_fragment_recoding_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016年9月20日 09:30:30"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_fragment_recoding_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="00:50"
                    android:textColor="#8f8f8f"
                    android:textSize="16sp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_alignTop="@id/ll_recoding_tool_titleDone"
                android:background="#000000"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_alignBottom="@id/ll_recoding_tool_titleDone"
                android:background="#000000"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/ll_recoding_tool_titleDone"
                android:layout_centerInParent="true"
                android:layout_marginTop="40dp"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_fragment_recording_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_left"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="68dp">

                    <ImageView

                        android:id="@+id/iv_recoding_tool_reRecording"
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/recording_rerecording_ico_40_3x"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_recoding_tool_reRecording"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="重录"
                        android:textColor="#909090"
                        android:textSize="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_trylisten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/iv_recoding_tool_startrecoding1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/recording_pressed_240"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_recoding_tool_startrecoding1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:text="试听"
                        android:textColor="#909090"
                        android:textSize="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_recoding_tool_startrecoding12"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/recording_save_ico_30_3x"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_recoding_tool_startrecoding12"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:text="保存"
                        android:textColor="#909090"
                        android:textSize="16dp"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>