<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f1f1"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_fragment_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="10dp"
            android:layout_height="21dp"
            android:clickable="true"
            android:src="@drawable/arrow_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="我的"
            android:textColor="#000000"
            android:textSize="18sp"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_fragment_mine_clicklogin"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:clickable="true"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/iv_fragment_mine"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tv_fragment_mine_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/iv_fragment_mine"
                    android:text="点击登录"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_fragment_mine_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_fragment_mine_title"
                    android:layout_below="@id/tv_fragment_mine_title"
                    android:layout_marginTop="10dp"
                    android:text="登录后可设置机主及宝宝的基本信息"
                    android:textColor="#8f8f8f"
                    android:textSize="12sp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_mine_baby"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/myboby_ico_26_3x"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/tv_fragment_mine_baby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的宝宝"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />
                    <!--android:textStyle="bold"-->
                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/arrow_right"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_fragment_mine_collection"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/my_collection_ico_23_3x"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/tv_fragment_mine_collection"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的收藏"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/arrow_right"/>
                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:id="@+id/ll_fragment_mine_play"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/my_play_ico_24_3x"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/tv_fragment_mine_play"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的播放"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/arrow_right"/>
                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:id="@+id/ll_fragment_mine_push"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="18dp"
                        android:src="@drawable/my_push_ico_25_3x"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/tv_fragment_mine_push"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的推送"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/arrow_right"/>
                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fragment_mine_suggestion"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="30px"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="18dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/tv_fragment_mine_suggestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="14dp"
                        android:src="@drawable/arrow_right"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/ll_fragment_mine_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_marginLeft="18dp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp">

                            <TextView
                                android:id="@+id/tv_fragment_mine_update"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="软件升级"
                                android:textColor="#000000"

                                android:textSize="16sp"
                                />

                            <ImageView
                                android:layout_width="8dp"
                                android:layout_height="13dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="14dp"
                                android:src="@drawable/arrow_right"/>
                        </RelativeLayout>


                    </LinearLayout>

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="30px"-->
                    <!--android:text="当前最新版本号"-->
                    <!--android:textColor="#909090"-->
                    <!--android:textSize="16sp" />-->


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"/>

                <LinearLayout
                    android:id="@+id/ll_fragment_mine_about"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="18dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/tv_fragment_mine_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关       于"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/arrow_right"/>
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fragment_mine_logout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="18dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp">

                        <TextView
                            android:id="@+id/tv_fragment_mine_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退出登录"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            />

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="14dp"
                            android:src="@drawable/arrow_right"/>
                    </RelativeLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>