<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">

    <android.support.v7.widget.Toolbar

        android:id="@+id/tb_nodisturb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="免打扰设置"
            android:textColor="#000000"
            android:textSize="18sp" />
        <TextView
            android:layout_width="41dp"
            android:text="完成"
            android:textColor="#ff4511"
            android:textSize="20sp"
            android:layout_height="20dp"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rl_nodisturb_first"
        android:descendantFocusability="afterDescendants"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_below="@id/tb_nodisturb"
        android:background="#ffffff"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/tv_nodisturb_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间的设置,三级联动" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#8f8f8f"
            android:layout_below="@id/tv_nodisturb_first"
            android:text="每天" />

        <com.suke.widget.SwitchButton
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_nodisturb_first"
        android:src="@drawable/toy_add_pressed_160"/>

</RelativeLayout>