        <activity android:name=".activity.MyUpdateActivity"/>
        <activity android:name=".activity.MyPlayActivity"/>
        <activity android:name=".activity.MyPushActivity"/>
        <activity android:name=".activity.MyCollectionActivity"/>
        <activity android:name=".activity.MySuggestionActivity"/>
